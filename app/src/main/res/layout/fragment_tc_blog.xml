<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/requestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Request"
        android:layout_margin="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tenthCharTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/requestButton"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/eachTenthCharTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="start"
        android:singleLine="false"
        android:maxLines="6"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/tenthCharTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/wordMapTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="start"
        android:singleLine="false"
        android:maxLines="6"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/eachTenthCharTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>